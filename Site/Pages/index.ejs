                <input type="text" id="pdatedue" name="pdatedue" required placeholder="Project Start"><br>
                <input type="text" id="pdatecomp" name="pdatecomp" required placeholder="Project End"><br>
                <input type="submit" value="add">
            </form>
        </div>
    </div>

    <div class="milestoneAdd">
        <div class="container">
            <h4>+ add Milestones</h4>
            <form onsubmit="">
                <input type="text"id="mname" name="mname" required placeholder="Milestone Name"><br>
                <textarea type="text" id="mdesc" name="mdesc" required placeholder="Description" style="height: 200px"></textarea><br>
                <input type="text" id="mdatedue" name="mdatedue" required placeholder="Milestone Start"><br>
                <input type="text" id="mdatecomp" name="mdatecomp" required placeholder="Milestone End"><br>
                <input class="milestone" type="submit" value="add">
            </form>
        </div>
    </div>

