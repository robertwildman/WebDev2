<% if(locals.user) { %>
<input type="hidden" value="<%= user.AccountID %>" id="user_id" />
<% user.Projects.forEach(function(posts){ %>

  <div class="projectTiles">
          <div class="container">
              <h4><%= posts.Name %></h4>
              <p>Start date Insert // end date insert</p>
              <p><%= posts.Desc %></p>
